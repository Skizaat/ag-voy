{% extends 'base.html.twig' %}

{% block title %}Owner{% endblock %}

{% block main %}
    <h1>Owner</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ owner.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ owner.firstname }}</td>
            </tr>
            <tr>
                <th>Familyname</th>
                <td>{{ owner.familyname }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ owner.address }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ owner.country }}</td>
            </tr>
            <tr>
                <th>Rooms</th>
                {% for room in owner.rooms %}
                <td><a href="{{ path('room_show', {'id' : room.id}) }}">{{ room.summary }}</a></td>
                <br>
                {% endfor %}
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ vich_uploader_asset(owner, 'imageFile') }}"/></td>
            </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_USER') %}
        <a href="{{ path('new_room_of', {'id': owner.id}) }}">create a new room</a>
    {% endif %}

    <br>
    <br>

    <a href="{{ path('owner_index') }}">back to list</a>

    {% if is_granted('ROLE_USER') %}

    <a href="{{ path('owner_edit', {'id': owner.id}) }}">edit</a>

    {{ include('owner/_delete_form.html.twig') }}

    {% endif %}
{% endblock %}
