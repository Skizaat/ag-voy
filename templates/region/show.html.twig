{% extends 'base.html.twig' %}

{% block title %}Region{% endblock %}

{% block main %}
    <h1>Region</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ region.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ region.name }}</td>
            </tr>
            <tr>
                <th>Presentation</th>
                <td>{{ region.presentation }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ region.country }}</td>
            </tr>
            <tr>
                <th>Rooms</th>
                {% for room in region.rooms %}
                    <td><a href="{{ path('room_show', {'id' : room.id}) }}">{{ room.summary }}</a></td>
                    <br>
                {% endfor %}
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ vich_uploader_asset(region, 'imageFile') }}"/></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('region_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('region_edit', {'id': region.id}) }}">edit</a>
    
        {{ include('region/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
